{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "allowJs": true,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@/application/*": ["./src/application/*"],
            "@/domain/*": ["./src/domain/*"],
            "@/spi/*": ["./src/spi/*"],
            "@/api/*": ["./src/api/*"]
        }
    }
}
